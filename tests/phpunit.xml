<phpunit bootstrap="bootstrap.php">
    <testsuites>
        <testsuite name="Repository">
            <file>src/Wallhack/Repository.php</file>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="public" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70" />
    </logging>
    <filter>
        <blacklist>
            <directory>../vendor</directory>
            <directory>../tests</directory>
        </blacklist>
    </filter>
</phpunit>
